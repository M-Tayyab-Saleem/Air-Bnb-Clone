<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3>Edit Listing</h3>
    <form action="/listings/<%=listing._id%>?_method=PUT" method="post" novalidate class="needs-validation">
      <div class="mb-3">
        <label for="title" class="form-label">Enter catchy title</label>
        <input
          type="text"
          value="<%=listing.title%>"
          name="listing[title]"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Title required</div>
      </div>
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea type="text" name="listing[description]" class="form-control" required>
        <%=listing.description%></textarea
        ><div class="invalid-feedback">Enter some touchy Description</div>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Image</label>
        <input
          type="text"
          value="<%=listing.image%>"
          name="listing[image]"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Please link for Image</div>
      </div>
      <div class="row">
        <div class="col-md-4" class="mb-3">
          <label for="description" class="form-label">Price</label>
          <input
            type="number"
            value="<%=listing.price%>"
            name="listing[price]"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Price required</div>
        </div>
        <div class="col-md-8" class="mb-3">
          <label for="description" class="form-label">Location</label>
          <input
            type="text"
            value="<%=listing.location%>"
            name="listing[location]"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Location required</div>
        </div>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Country</label>
        <input
          type="text"
          value="<%=listing.country%>"
          name="listing[country]"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Country required</div>
      </div>
      <button class="btn add-btn btn-dark mt-3">Edit</button>
    </form>
  </div>
</div>
